<table class="table table-striped"" style=" margin-top:50px
    <% @products.each_with_index do |index| %>>
          <td><%= index.name %></td>
          <td><%= index.description %></td>
          <td><%= index.price %></td>
          <td><%= index.salon.name %></td>
          <td><%= index.product_type_id %></td>
          <td><%= link_to 'Edit', edit_product_path(index) %></td>
          <td><%= link_to 'Destroy', product_path(index), method: :delete %></td>
        </tr>
    <% end %>
  </table>
   <div class="container col-md-5">
    <%= paginate @products,
              theme: 'bootstrap-5',
              pagination_class: "pagination flex-wrap justify-content-center",
              nav_class: "d-inline-block" %>
  </div>
