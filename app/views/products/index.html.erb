<table class="table table-striped block-2">
    <thead>
      <tr>
        <th scope="col"><%= t('admin.name')%></th>
        <th scope="col"><%= t('product.desc')%></th>
        <th scope="col"><%= t('product.price')%></th>
        <th scope="col"><%= t('product.salon')%></th>
        <th scope="col"><%= t('product.photo')%></th>
        <th scope="col"><%= t('product.type')%></th>
         <th scope="col"><%= t('button.edit')%></th>
         <th scope="col"><%= t('button.destroy')%></th>
         <th scope="col"><%= t('button.show')%></th>
      </tr>
    </thead>
    <% @products.each_with_index do |index| %>
        <tr>
          <td><%= index.name %></td>
          <td><%= index.description %></td>
          <td><%= index.price %></td>
          <td><%= index.salon.name %></td>
          <td><% if index.avatar.attached? %>
                <%= image_tag index.avatar,class:"card-img-top index-image" %>
              <% else %>
                <img class="card-img-top index-image" src="data:image/svg+xml;charset=UTF-8,%3Csvg%20width%3D%22288%22%20height%3D%22225%22%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20288%20225%22%20preserveAspectRatio%3D%22none%22%3E%3Cdefs%3E%3Cstyle%20type%3D%22text%2Fcss%22%3E%23holder_17e22579a47%20text%20%7B%20fill%3A%23eceeef%3Bfont-weight%3Abold%3Bfont-family%3AArial%2C%20Helvetica%2C%20Open%20Sans%2C%20sans-serif%2C%20monospace%3Bfont-size%3A14pt%20%7D%20%3C%2Fstyle%3E%3C%2Fdefs%3E%3Cg%20id%3D%22holder_17e22579a47%22%3E%3Crect%20width%3D%22288%22%20height%3D%22225%22%20fill%3D%22%2355595c%22%3E%3C%2Frect%3E%3Cg%3E%3Ctext%20x%3D%2296.84375%22%20y%3D%22118.8%22%3EThumbnail%3C%2Ftext%3E%3C%2Fg%3E%3C%2Fg%3E%3C%2Fsvg%3E" data-holder-rendered="true">
              <% end %></td>
          <td><%= index.product_type_name %></td>
          <td><%= link_to t('button.edit'), edit_product_path(index),class: "btn btn-sm btn-outline-secondary" %></td>
          <td><%= link_to t('button.destroy'), product_path(index), method: :delete,class: "btn btn-sm btn-outline-secondary" %></td>
          <td><%= link_to t('button.show'), product_path(index), class: "btn btn-sm btn-outline-secondary" %></td>
        </tr>
    <% end %>
  </table>
   <div class="container col-md-5">
    <%= paginate @products,
              theme: 'bootstrap-5',
              pagination_class: "pagination flex-wrap justify-content-center",
              nav_class: "d-inline-block bg-light" %>
  </div>
