<% if current_user %>
  <table class="table table-striped">
    <thead>
          <%= link_to 'Create new product type', new_product_type_path, class: 'btn btn-outline-secondary' ,style:"margin-top:60px;" %>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Edit</th>
        <th scope="col">Destroy</th>
      </tr>
    </thead>
    <tbody class="table table-striped">
      <% @product_type.each_with_index do |index| %>
        <tr>
          <td><%= index.name %></td>
          <td><%= link_to 'Edit', edit_product_type_path(index) %></td>
          <td><%= link_to 'Destroy', product_type_path(index), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
