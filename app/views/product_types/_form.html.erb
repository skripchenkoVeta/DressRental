<div class="container block-2">
  <div class="row">
    <div class="col-md-7">
      <%= link_to t('button.back'), product_types_path, class: 'btn btn-primary' %></td>
      <%= form_for @product_type do |f| %>
        <div class="field">
          <%= f.label :name %><br>
          <%= f.text_field :name, required: true, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit t('button.save'), class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>
