<div class="container block-2 f">
  <div class="col-md-4">
    <div class="row border shadow-sm position-relative">
      <div class="col-md-9 items">
        <%= form_for @size do |f| %>
        <%= f.hidden_field :product_id , value: @product.id %>
          <div class="field">
            <label>Размер</label>
            <%= f.text_field :size, required: true, class: "form-control" %>
          </div>
          <div class="field">
            <label>Количество</label>
            <%= f.text_field :count_size, required: true, class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit t('button.save'), class:"btn btn-primary items-btn" %>
          </div>
        <% end %>
     </div>
    </div>
  </div>
</div>
