
<section class="h-100 gradient-form">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://cdn-icons-png.flaticon.com/512/27/27369.png" style="width: 130px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Dress Rental</h4>
                </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
                  <%= f.hidden_field :profileable_type ,value: 'BuyerInfo' %>
                  <%= f.hidden_field :role , value: 'Buyer' %>
  <div class="field form-outline mb-4">
    <label>Имя</label>
    <%= f.text_field :name , class:"form-control" %>
  </div>
  <div class="field form-outline mb-4">
    <label>Фамилия</label>
    <%= f.text_field :surname , class:"form-control" %>
  </div>
  <div class="field form-outline mb-4">
    <label>Номер телефона</label>
    <%= f.telephone_field :number , class:"form-control" %>
  </div>
  <div class="field form-outline mb-4">
    <%= f.label :email %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"form-control" %>
  </div>

  <div class="field form-outline mb-4">
    <label>Пароль</label>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> минимальное количество символов)</em>
    <% end %><br>
    <%= f.password_field :password, autocomplete: "new-password" , class:"form-control" %>
  </div>

  <div class="field form-outline mb-4">
    <label>Подтвердите пароль</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control" %>
  </div>

  <%= f.fields_for :buyer_infos do |builder| %>
    <%= builder.hidden_field :freeze , value: 'false' %>
    <div class="field form-outline mb-4">
      <label>День Рождения</label><br>
      <%= builder.date_select :birthday , order: [:month, :day, :year] ,start_year: 1900, end_year: Time.now.year, class: "form-control" %>
    </div>
    <div class="field form-outline mb-4">
      <label>Адрес</label>
      <%= builder.text_field :address,class:"form-control" %>
    </div>

  <% end %>
  <div class="actions text-center pt-1 mb-5 pb-1">
    <%= f.submit t('signup.signup'), class:"btn btn-outline-secondary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <img src="https://static.bhphotovideo.com/explora/sites/default/files/styles/960/public/09-yamagata_mg_4265.jpg?itok=u6k80avh" alt="Login image" class="w-100 vh-70" style="object-fit: cover; object-position: left;">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
