<div class="container block-2 f">
  <div class="col-md-4">
    <div class="row border shadow-sm position-relative">
      <div class="col-md-9 items">
        <% if current_user.role == 'Admin' %>
          <%= link_to t('button.back'), salons_path, class: 'btn btn-primary items-btn' %></td>
        <% else %>
          <%= link_to t('button.back'), salon_menu_path, class: 'btn btn-primary items-btn' %></td>
        <% end %>
        <%= form_for @salon do |f| %>
        <%if current_user.role != 'Admin'%>
          <%= f.hidden_field :seller_info_id , value: current_user.profileable_id %>
          <%end%>
          <div class="field">
            <label>Название</label>
            <%= f.text_field :name, required: true, class: "form-control" %>
          </div>
          <div class="field">
            <label>Адрес</label>
            <%= f.text_field :address, required: true, class: "form-control" %>
            <%= f.file_field :picture %>
          </div>
          <div class="actions">
            <%= f.submit t('button.save'), class:"btn btn-primary items-btn" %>
          </div>
        <% end %>
     </div>
    </div>
  </div>
</div>
